<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SH设备配置系统</title>
    
    <!-- Element Plus CSS -->
    <link rel="stylesheet" href="https://unpkg.com/element-plus/dist/index.css" />
    
    <!-- 自定义样式 -->
    <link rel="stylesheet" href="~/css/config/config-layout.css" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- 导航栏 -->
    <nav class="navbar">
        <div class="navbar-brand">
            <i class="el-icon-setting"></i>
            SH设备配置系统
        </div>
        <div class="navbar-nav">
            @await Html.PartialAsync("_ConfigNavigation")
        </div>
    </nav>

    <!-- 主内容区 -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Vue.js和Element Plus -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://unpkg.com/element-plus/dist/index.full.js"></script>
    <script src="https://unpkg.com/element-plus/icons-vue/dist/index.iife.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    
    <!-- Element Plus 图标注册 -->
    <script>
        const { createApp } = Vue;
        const ElementPlusIconsVue = window.ElementPlusIconsVue;
        
        // 全局注册图标
        window.registerIcons = function(app) {
            for (const [key, component] of Object.entries(ElementPlusIconsVue)) {
                app.component(key, component);
            }
        };
    </script>
    
    <!-- 通用脚本 -->
    <script src="~/js/config/config-common.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>